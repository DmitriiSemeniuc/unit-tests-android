<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_item_border"
    android:orientation="vertical"
    android:paddingStart="@dimen/repo_item_padding_horizontal"
    android:paddingTop="@dimen/repo_item_padding_top"
    android:paddingEnd="@dimen/repo_item_padding_horizontal"
    android:paddingBottom="@dimen/repo_item_padding_bottom"
    android:foreground="?attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRepoName"
        style="@style/TextBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Repo Name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRepoDescription"
        style="@style/TextNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Repo description" />

</androidx.appcompat.widget.LinearLayoutCompat>